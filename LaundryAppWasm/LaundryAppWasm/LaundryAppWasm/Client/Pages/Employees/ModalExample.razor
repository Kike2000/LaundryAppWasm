<!-- Pages/ModalExample.razor -->
@page "/modal"

@inject IJSRuntime JSRuntime
<h3>Modal Example</h3>

<!-- Button to trigger the modal -->
<button class="btn btn-primary" @onclick="ShowModal">Show Modal</button>

<!-- Modal -->
<div class="modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Modal content goes here -->
                <p>Hello, this is your modal content!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@code {
    // Method to show the modal
    private void ShowModal()
    {
        // Invoke JavaScript to show the modal
        JSRuntime.InvokeVoidAsync("showModal", "exampleModal");
    }
}
